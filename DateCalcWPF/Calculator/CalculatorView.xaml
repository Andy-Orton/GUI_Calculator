<UserControl x:Class="DateCalcWPF.Calculator.CalculatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DateCalcWPF.Calculator"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:CalculatorViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <!--Setting Grid Column Labels-->
        <Label Content="Day"
               Grid.Row="0"
               Grid.Column="1"></Label>
        <Label Content="Month"
               Grid.Row="0"
               Grid.Column="2"></Label>
        <Label Content="Year"
               Grid.Row="0"
               Grid.Column="3"></Label>
        <!--Setting Grid Row Labels-->
        <Label Content="First Date"
               Grid.Row="1"
               Grid.Column="0"></Label>
        <Label Content="Second Date"
               Grid.Row="2"
               Grid.Column="0"></Label>

        <!--Setting Inputs-->
        <TextBox x:Name="firstDayInput"
                 Text="{Binding firstDay}"
                 Grid.Row="1"
                 Grid.Column="1"
                 MaxLength="2"
                 Margin="3"></TextBox>
        <TextBox x:Name="firstMonthInput"
                 Text= "{Binding firstMonth}"
                 Grid.Row="1"
                 Grid.Column="2"
                 MaxLength="2"
                 Margin="3"></TextBox>
        <TextBox x:Name="firstYearInput"
                 Grid.Row="1"
                 Text="{Binding firstYear}"
                 Grid.Column="3"
                 MaxLength="4"
                 Margin="3"></TextBox>
        <TextBox x:Name="secondDayInput"
                 Grid.Row="2"
                 Text="{Binding secondDay}"
                 Grid.Column="1"
                 MaxLength="2"
                 Margin="3"></TextBox>
        <TextBox x:Name="secondMonthInput"
                 Grid.Row="2"
                 Text="{Binding secondMonth}"
                 Grid.Column="2"
                 MaxLength="2"
                 Margin="3"></TextBox>
        <TextBox x:Name="secondYearInput"
                 Grid.Row="2"
                 Text="{Binding secondYear}"
                 Grid.Column="3"
                 MaxLength="4"
                 Margin="3"></TextBox>
        <!--Buttons and Total-->
        <Button Content="Calculate" Grid.Row="3" Grid.Column="0" MaxWidth="75" Command="{Binding CalculateCommand}"></Button>
        <TextBlock Text="{Binding totalDiff}"
                   Grid.Row="3"
                   Grid.Column="1"></TextBlock>
    </Grid>

</UserControl>
